<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="will_corp_zombie.listener.doctrine.stronghold.class">WillCorp\ZombieBundle\Event\Listener\Doctrine\StrongholdListener</parameter>
        <parameter key="will_corp_zombie.listener.doctrine.player.class">WillCorp\ZombieBundle\Event\Listener\Doctrine\PlayerListener</parameter>
    </parameters>

    <services>
        <service id="will_corp_zombie.listener.doctrine.stronghold" class="%will_corp_zombie.listener.doctrine.stronghold.class%">
            <argument type="service" id="will_corp_zombie.game.processor.chain_collector"/>
            <tag name="doctrine.event_listener" event="prePersist"/>
            <tag name="doctrine.event_listener" event="preUpdate"/>
        </service>
        <service id="will_corp_zombie.listener.doctrine.player" class="%will_corp_zombie.listener.doctrine.player.class%">
            <tag name="doctrine.event_listener" event="prePersist"/>
        </service>
    </services>
</container>
