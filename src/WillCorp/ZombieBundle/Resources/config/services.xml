<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="will_corp_zombie.game.mechanic.class">WillCorp\ZombieBundle\Game\Mechanic</parameter>
        <parameter key="will_corp_zombie.game.processor.upgrade.class">WillCorp\ZombieBundle\Game\Processor\Upgrade</parameter>
        <parameter key="will_corp_zombie.game.processor.move.class">WillCorp\ZombieBundle\Game\Processor\Move</parameter>
    </parameters>

    <services>
        <service id="will_corp_zombie.game.mechanic" class="%will_corp_zombie.game.mechanic.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="will_corp_zombie.game.processor.upgrade" />
            <argument type="service" id="will_corp_zombie.game.processor.move" />
        </service>
        <service id="will_corp_zombie.game.processor.upgrade" class="%will_corp_zombie.game.processor.upgrade.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="will_corp_zombie.game.processor.move" class="%will_corp_zombie.game.processor.move.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>
